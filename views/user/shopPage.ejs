<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shop - Anjali Flower Works</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.4/gsap.min.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
        }
        
        /* Dark mode styles */
        .dark-mode {
            --bg-primary: #1e1e1e;
            --bg-secondary: #252526;
            --bg-tertiary: #333333;
            --text-primary: #ffffff;
            --text-secondary: #cccccc;
            --border-color: #404040;
        }

        body.dark-mode {
            background-color: var(--bg-primary);
            color: var(--text-primary);
        }

        .dark-mode .bg-white {
            background-color: var(--bg-secondary);
        }

        .dark-mode .bg-gray-50 {
            background-color: var(--bg-tertiary);
        }

        .dark-mode .text-gray-500 {
            color: var(--text-secondary);
        }

        .dark-mode .text-gray-600 {
            color: var(--text-secondary);
        }

        .dark-mode .border-gray-200 {
            border-color: var(--border-color);
        }

        .dark-mode .shadow-sm {
            box-shadow: 0 1px 2px rgba(0, 0, 0, 0.5);
        }

        .product-card {
            transition: all 0.3s ease;
            opacity: 0;
            transform: translateY(20px);
        }

        .product-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
        }

        .product-card.show {
            opacity: 1;
            transform: translateY(0);
        }

        .back-btn {
            transition: all 0.3s ease;
        }

        .back-btn:hover {
            transform: translateX(-3px);
        }

        .price-badge {
            background: linear-gradient(135deg, #059669, #047857);
        }

        .category-header {
            background: linear-gradient(135deg, #0d9488, #0f766e);
        }

        .search-highlight {
            background-color: #fef3c7;
            padding: 2px 4px;
            border-radius: 4px;
        }

        .empty-state {
            animation: fadeIn 0.5s ease;
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .loading-spinner {
            animation: spin 1s linear infinite;
        }

        @keyframes spin {
            from { transform: rotate(0deg); }
            to { transform: rotate(360deg); }
        }

        .slide-in {
            opacity: 0;
            transform: translateY(20px);
        }

        /* Mobile-optimized grid */
        .mobile-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 0.75rem;
        }

        /* Mobile search and filters */
        .mobile-filter-bar {
            position: sticky;
            top: 0;
            background: white;
            z-index: 40;
            border-bottom: 1px solid #e5e7eb;
        }

        .search-overlay {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.5);
            z-index: 50;
            opacity: 0;
            visibility: hidden;
            transition: all 0.3s ease;
        }

        .search-overlay.active {
            opacity: 1;
            visibility: visible;
        }

        .search-modal {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%) scale(0.9);
            background: white;
            width: 90%;
            max-width: 400px;
            border-radius: 16px;
            padding: 1.5rem;
            transition: all 0.3s ease;
        }

        .search-overlay.active .search-modal {
            transform: translate(-50%, -50%) scale(1);
        }

        .sort-dropdown {
            position: relative;
        }

        .sort-options {
            position: absolute;
            top: 100%;
            right: 0;
            background: white;
            border: 1px solid #e5e7eb;
            border-radius: 8px;
            min-width: 200px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
            z-index: 30;
            opacity: 0;
            visibility: hidden;
            transform: translateY(-10px);
            transition: all 0.3s ease;
        }

        .sort-options.active {
            opacity: 1;
            visibility: visible;
            transform: translateY(0);
        }

        .sort-option {
            padding: 0.75rem 1rem;
            cursor: pointer;
            transition: background-color 0.2s;
        }

        .sort-option:hover {
            background-color: #f9fafb;
        }

        .sort-option.active {
            background-color: #0d9488;
            color: white;
        }

        .price-filter {
            display: flex;
            gap: 0.5rem;
            margin-bottom: 1rem;
        }

        .price-btn {
            flex: 1;
            padding: 0.5rem 0.75rem;
            border: 1px solid #e5e7eb;
            border-radius: 8px;
            background: white;
            text-align: center;
            font-size: 0.875rem;
            transition: all 0.2s;
        }

        .price-btn:hover {
            border-color: #0d9488;
        }

        .price-btn.active {
            background: #0d9488;
            color: white;
            border-color: #0d9488;
        }

        /* Mobile bottom navigation spacing */
        .main-content {
            padding-bottom: 80px;
        }

        /* Touch-friendly buttons */
        .touch-btn {
            min-height: 44px;
            min-width: 44px;
        }

        /* Responsive text sizes */
        @media (max-width: 640px) {
            .product-card h3 {
                font-size: 0.875rem;
                line-height: 1.25rem;
            }
            
            .product-card p {
                font-size: 0.75rem;
            }
            
            .price-badge {
                font-size: 0.75rem;
                padding: 0.25rem 0.5rem;
            }
        }

        /* Dark mode for mobile elements */
        .dark-mode .mobile-filter-bar {
            background: var(--bg-secondary);
            border-color: var(--border-color);
        }

        .dark-mode .search-modal {
            background: var(--bg-secondary);
        }

        .dark-mode .sort-options {
            background: var(--bg-secondary);
            border-color: var(--border-color);
        }

        .dark-mode .price-btn {
            background: var(--bg-tertiary);
            border-color: var(--border-color);
            color: var(--text-primary);
        }
    </style>
</head>
<body class="bg-gray-50 transition-colors duration-300">
    <!-- Header -->
    <header class="bg-white shadow-sm sticky top-0 z-50">
        <div class="p-4">
            <div class="flex items-center justify-between">
                <div class="flex items-center gap-3">
                    <button onclick="history.back()" class="back-btn touch-btn flex items-center gap-2 text-teal-600 hover:text-teal-700">
                        <span class="text-xl">‚Üê</span>
                        <span class="text-sm">Back</span>
                    </button>
                    <h1 class="text-lg font-bold text-teal-600">Anjali Flower Works</h1>
                </div>
                
                <div class="flex items-center gap-2">
                    <button id="darkModeToggle" class="touch-btn p-2 rounded-full hover:bg-gray-100 transition-colors">
                        üåô
                    </button>
                </div>
            </div>
        </div>
    </header>

    <!-- Category Header -->
    <div class="category-header text-white py-4 slide-in">
        <div class="px-4">
            <div class="flex items-center justify-between">
                <div>
                    <h2 class="text-xl font-bold" id="categoryTitle">All Products</h2>
                    <p class="text-sm opacity-90 mt-1" id="categoryDescription">Discover our beautiful collection</p>
                </div>
                <div class="text-right">
                    <div class="text-2xl" id="categoryIcon">üå∏</div>
                    <div class="text-sm opacity-90" id="productCount">0 products</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Mobile Filter Bar -->
    <div class="mobile-filter-bar p-3">
        <div class="flex items-center gap-3">
            <button id="searchBtn" class="touch-btn flex items-center gap-2 bg-gray-100 px-4 py-2 rounded-lg flex-1">
                <span>üîç</span>
                <span class="text-sm text-gray-600">Search products...</span>
            </button>
            
            <div class="sort-dropdown">
                <button id="sortBtn" class="touch-btn flex items-center gap-2 bg-gray-100 px-4 py-2 rounded-lg">
                    <span class="text-sm">Sort</span>
                    <span class="text-xs">‚ñº</span>
                </button>
                <div id="sortOptions" class="sort-options">
                    <div class="sort-option active" data-sort="default">Featured</div>
                    <div class="sort-option" data-sort="name-asc">Name (A-Z)</div>
                    <div class="sort-option" data-sort="name-desc">Name (Z-A)</div>
                    <div class="sort-option" data-sort="price-asc">Price (Low to High)</div>
                    <div class="sort-option" data-sort="price-desc">Price (High to Low)</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="main-content px-4 py-4">
        <!-- Price Filter -->
        <div class="price-filter">
            <button class="price-btn active" data-price="all">All</button>
            <button class="price-btn" data-price="0-500">‚Çπ0-500</button>
            <button class="price-btn" data-price="500-1000">‚Çπ500-1K</button>
            <button class="price-btn" data-price="1000+">‚Çπ1K+</button>
        </div>

        <!-- Products Grid -->
        <div id="productsContainer" class="mobile-grid">
            <% if (products && products.length > 0) { %>
                <% products.forEach(product => { %>
                    <div class="product-card bg-white rounded-lg shadow-sm overflow-hidden cursor-pointer"
                         onclick="window.location.href='/product/<%= product._id %>'">
                        <div class="aspect-square bg-gray-100">
                            <% if (product.images && product.images.length > 0) { %>
                                <img src="<%= product.images[0].path %>" 
                                     alt="<%= product.name %>"
                                     class="w-full h-full object-cover">
                            <% } else { %>
                                <div class="w-full h-full flex items-center justify-center">
                                    <span class="text-4xl">üå∏</span>
                                </div>
                            <% } %>
                        </div>
                        <div class="p-3">
                            <h3 class="font-semibold mb-1"><%= product.name %></h3>
                            <p class="text-gray-600 text-xs mb-2">
                                <%= product.description.length > 50 ? 
                                    product.description.substring(0, 50) + '...' : 
                                    product.description %>
                            </p>
                            <div class="flex items-center justify-between">
                                <span class="price-badge text-white px-2 py-1 rounded-full text-xs font-semibold">
                                    ‚Çπ<%= product.price %>
                                </span>
                                <button class="bg-teal-600 text-white px-3 py-1 rounded-md text-xs"
                                        onclick="event.stopPropagation()">
                                    Add
                                </button>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <div id="emptyState" class="col-span-2 empty-state bg-white rounded-xl shadow-sm p-8 text-center">
                    <div class="text-4xl mb-4">üîç</div>
                    <h3 class="text-lg font-semibold mb-2">No products found</h3>
                    <p class="text-gray-600 mb-4 text-sm">Try adjusting your search or filters</p>
                </div>
            <% } %>
        </div>

        <!-- Empty State -->
        <div id="emptyState" class="empty-state bg-white rounded-xl shadow-sm p-8 text-center hidden">
            <div class="text-4xl mb-4">üîç</div>
            <h3 class="text-lg font-semibold mb-2">No products found</h3>
            <p class="text-gray-600 mb-4 text-sm">Try adjusting your search or price filter</p>
            <button id="resetFilters" class="bg-teal-600 text-white px-6 py-2 rounded-lg hover:bg-teal-700 transition-colors">
                Reset Filters
            </button>
        </div>

        <!-- Loading State -->
        <div id="loadingState" class="text-center py-8 hidden">
            <div class="loading-spinner w-6 h-6 border-4 border-teal-200 border-t-teal-600 rounded-full mx-auto mb-4"></div>
            <p class="text-gray-600 text-sm">Loading products...</p>
        </div>
    </div>

    <!-- Search Overlay -->
    <div id="searchOverlay" class="search-overlay">
        <div class="search-modal">
            <div class="flex items-center justify-between mb-4">
                <h3 class="text-lg font-semibold">Search Products</h3>
                <button id="closeSearch" class="touch-btn text-gray-500 hover:text-gray-700">‚úï</button>
            </div>
            <div class="relative mb-4">
                <input type="text" id="searchInput" 
                    placeholder="Search products..." 
                    class="w-full pl-10 pr-4 py-3 border border-gray-200 rounded-lg focus:border-teal-500 focus:ring-1 focus:ring-teal-500">
                <span class="absolute left-3 top-3.5 text-gray-400">üîç</span>
            </div>
            <div class="flex justify-end gap-2">
                <button id="clearSearch" class="px-4 py-2 text-gray-600 hover:text-gray-800">Clear</button>
                <button id="applySearch" class="px-4 py-2 bg-teal-600 text-white rounded-lg hover:bg-teal-700">Search</button>
            </div>
        </div>
    </div>

    <!-- Bottom Navigation -->
    <div class="fixed bottom-0 w-full bg-white shadow-lg border-t z-20">
        <div class="flex justify-around items-center p-3">
            <a href="/" class="flex flex-col items-center text-gray-500 touch-btn">
                <span class="text-xl">üè†</span>
                <span class="text-xs">Home</span>
            </a>
            <a href="/shop" class="flex flex-col items-center text-teal-600 touch-btn">
                <span class="text-xl">üõçÔ∏è</span>
                <span class="text-xs">Shop</span>
            </a>
            <a href="/favourites" class="flex flex-col items-center text-gray-500 touch-btn">
                <span class="text-xl">üå∑</span>
                <span class="text-xs">Favorites</span>
            </a>
            <a href="/contact" class="flex flex-col items-center text-gray-500 touch-btn">
                <span class="text-xl">üìû</span>
                <span class="text-xs">Contact</span>
            </a>
        </div>
    </div>

    <script>
        // Initialize server data
        const serverProducts = <%- JSON.stringify(products || []) %>;
        const serverCategories = <%- JSON.stringify(categories || []) %>;

        // Update products display
        function displayProducts(products) {
            const productsContainer = document.getElementById('productsContainer');
            productsContainer.innerHTML = '';

            if (!products || products.length === 0) {
                productsContainer.innerHTML = `
                    <div id="emptyState" class="col-span-2 empty-state bg-white rounded-xl shadow-sm p-8 text-center">
                        <div class="text-4xl mb-4">üîç</div>
                        <h3 class="text-lg font-semibold mb-2">No products found</h3>
                        <p class="text-gray-600 mb-4 text-sm">Try adjusting your search or filters</p>
                    </div>
                `;
                return;
            }

            products.forEach(product => {
                const card = document.createElement('div');
                card.className = 'product-card bg-white rounded-lg shadow-sm overflow-hidden cursor-pointer';
                card.onclick = () => window.location.href = `/product/${product._id}`;
                
                const imageHtml = product.images && product.images.length > 0 
                    ? `<img src="${product.images[0].path}" alt="${product.name}" class="w-full h-full object-cover">`
                    : `<div class="w-full h-full flex items-center justify-center"><span class="text-4xl">üå∏</span></div>`;

                card.innerHTML = `
                    <div class="aspect-square bg-gray-100">
                        ${imageHtml}
                    </div>
                    <div class="p-3">
                        <h3 class="font-semibold mb-1">${product.name}</h3>
                        <p class="text-gray-600 text-xs mb-2">
                            ${product.description?.length > 50 ? 
                              product.description.substring(0, 50) + '...' : 
                              product.description || ''}
                        </p>
                        <div class="flex items-center justify-between">
                            <span class="price-badge text-white px-2 py-1 rounded-full text-xs font-semibold">
                                ‚Çπ${product.price}
                            </span>
                            <button class="bg-teal-600 text-white px-3 py-1 rounded-md text-xs"
                                    onclick="event.stopPropagation()">
                                Add
                            </button>
                        </div>
                    </div>
                `;
                productsContainer.appendChild(card);
            });

            // Animate products
            const cards = document.querySelectorAll('.product-card');
            cards.forEach((card, index) => {
                setTimeout(() => card.classList.add('show'), index * 100);
            });
        }

        // Initialize on page load
        document.addEventListener('DOMContentLoaded', () => {
            displayProducts(serverProducts);
        });
    </script>
</body>
</html>